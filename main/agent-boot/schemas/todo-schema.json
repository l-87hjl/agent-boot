{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/l-87hjl/agent-boot/schemas/todo-schema.json",
  "title": "Agent TODO Schema",
  "description": "Schema for agent TODO.json files in workspace repositories",
  "type": "object",
  "required": ["version", "tasks"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (semver format)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "tasks": {
      "type": "array",
      "description": "List of tasks",
      "items": {
        "type": "object",
        "required": ["id", "title", "status", "priority"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique task identifier",
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "title": {
            "type": "string",
            "description": "Brief task title",
            "minLength": 1,
            "maxLength": 200
          },
          "status": {
            "type": "string",
            "description": "Current task status",
            "enum": ["pending", "in-progress", "blocked", "done"]
          },
          "priority": {
            "type": "string",
            "description": "Task priority level",
            "enum": ["critical", "high", "medium", "low"]
          },
          "dependencies": {
            "type": "array",
            "description": "IDs of tasks that must complete before this one",
            "items": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]+$"
            }
          },
          "description": {
            "type": "string",
            "description": "Detailed task description"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the task was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the task was last updated"
          },
          "completedAt": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "When the task was completed"
          },
          "blockedReason": {
            "type": "string",
            "description": "Explanation if status is 'blocked'"
          },
          "metadata": {
            "type": "object",
            "description": "Task-specific metadata",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object",
      "description": "Global TODO metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
